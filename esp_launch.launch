<launch>
    <node name="esp1" pkg="rosserial_python" type="serial_node.py" output="screen">
        <param name="port"              type="string"               value="/dev/ttyUSB0"/>
        <param name="baud"              type="int"                  value="115200"/>
    </node>
    <node name="esp2" pkg="rosserial_python" type="serial_node.py" output="screen">
        <param name="port"              type="string"               value="/dev/ttyUSB1"/>
        <param name="baud"              type="int"                  value="115200"/>
    </node>
</launch>